<div class="container">
 <div class="row">
      <div class="mx-auto" style="width: 500px;">
      <h2>ジャンル一覧・追加</h2>
      <%= form_with model:@genre,url: admin_genres_path, method: :post do |f| %>
         <!--htmlに変換する-->
       <div class="form-group">
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name, class: 'name' %>
        <%= f.submit "新規登録", class:"btn btn-success" %>
       </div>
      <% end %>
      <table class="table table-bordered col-12 text-center">
        <thead>
          <tr>
            <th style="background-color:pink">ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td ><%= genre.name %></td>
              <td><%= link_to "編集する",edit_admin_genre_path(genre.id),class: "btn btn-success"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
   </div>

  </div>

