<h2>会員一覧</h2>

<table>
  <thead>
    <tr>
      <td>会員ID</td>
      <td>氏名</td>
      <td>メールアドレス</td>
      <td>ステータス</td>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
        <%= user.id %>
      </td>
      <td>
        <%= link_to admin_user_path(user.id) do %>
         <%= user.last_name %><%= user.first_name %>
        <% end %>
      </td>
      <td>
        <%= user.email %>
      </td>
      <td>
        <% if user.is_deleted %>
        退会
        <% else %>
        有効
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
  </table>