<div class='container'>
  <div class='row'>
    <div class='col-md-8'>
      <h4 class="my-4 text-center", style="background-color: #eee; width:290px; padding-left: 12px;"><b><%= @user.last_name %><%= @user.first_name %>さんの会員詳細</b></h4>
      <table class="table table-borderless">
        <tr>
          <td>会員ID</td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @user.last_name %>　<%= @user.first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @user.kana_last_name %>　<%= @user.kana_first_name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <% if @user.is_deleted == false %>
            <td class="text-success font-weight-bold">有効</td>
          <% else %>
            <td class="text-secondary font-weight-bold">退会</td>
          <% end %>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= link_to '編集する', edit_admin_user_path, class: "btn btn-success px-3", style:"font-weight:bold;" %>
            <%#= link_to 'コメント一覧を見る', admin_path, class: "btn btn-primary ml-5", style:"font-weight:bold;" %>
          </td>
        </tr>
      </table>

    </div>
  </div>
</div>
