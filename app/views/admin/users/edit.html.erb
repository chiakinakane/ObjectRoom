<div class='container'>
  <div class='row'>
    <div class='col-md-10'>
      <h4 class="my-4 text-center", style="background-color: #eee; width:340px; padding-left: 12px;"><b><%= @user.last_name %><%= @user.first_name %>さんの会員情報編集</b></h4>

      <%= render 'error_messages', user: @user %>

      <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>

        <div class="row mb-3">
          <div class="col-2">
            会員ID
          </div>
          <div class="col-4">
            <%= @user.id %>
          </div>
        </div>

        <div class="row">
          <div class="col-2 mt-3">
            <%= f.label :name, "氏名" %>
          </div>
          <div class="col-4">
            <%= f.text_field :lastname, class: "form-control" %>
          </div>
          <div class="col-4">
            <%= f.text_field :firstname, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-2 mt-3">
            <%= f.label :kana_name, "フリガナ" %>
          </div>
          <div class="col-4">
            <%= f.text_field :kana_lastname, class: "form-control" %>
          </div>
          <div class="col-4">
            <%= f.text_field :kana_firstname, class: "form-control" %>
          </div>
        </div>
        <div class="row">
          <div class="col-2 mt-3">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-4">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-2 mt-3">
            <%= f.label :is_deleted, "会員ステータス" %>
          </div>
          <div class="col-4 mt-3">
            <%= f.radio_button :is_deleted, :false %>
            <%= f.label :is_deleted, "有効", value: false, class: "text-secondary font-weight-bold" %>
            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted, "退会", value: true, class: "text-secondary font-weight-bold" %>
          </div>
          
          <!--<div class="col-4 mt-3">-->
          <!--  <%#= f.radio_button :is_deleted, :false %>-->
          <!--  <%#= f.label :is_deleted, "有効", class: "text-secondary font-weight-bold" %>-->
          <!--  <%#= f.radio_button :is_deleted, :true %>-->
          <!--  <%#= f.label :is_deleted, "退会", class: "text-secondary font-weight-bold" %>-->
          <!--</div>-->
        </div>

        <div class="row">
          <div class="col-2 mt-3">
          </div>
          <div class="col-4">
            <%= f.submit "編集を保存", class: "btn btn-success px-5 mt-3", style:"font-weight:bold;" %>
          </div>
        </div>

      <% end %>



    </div>
  </div>
</div>