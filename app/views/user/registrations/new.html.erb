<h4><strong>新規会員登録</strong></h4>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "user/shared/error_messages", resource: resource %>

  <table>
    <tr>
      <div class="field">
        <td>名前</td>
        <td>(姓)</td>
        <td><%= f.text_field :last_name, placeholder: "令和" %></td>
        <td>(名)</td>
        <td><%= f.text_field :first_name, placeholder: "道子" %></td>
      </div>
    </tr>
    <tr>
      <div class="field">
        <td>フリガナ</td>
        <td>(セイ)</td>
        <td><%= f.text_field :kana_last_name, placeholder: "レイワ" %></td>
        <td>(メイ)</td>
        <td><%= f.text_field :kana_first_name, placeholder: "ミチコ" %></td>
      </div>
    </tr>
    <tr>
      <div class="field">
        <td><%= f.label 'メールアドレス' %></td>
        <td></td>
        <td><%= f.email_field :email, placeholder: "sample@exaple.com", autofocus: true, autocomplete: "email" %></td>
        <td></td>
        <td></td>
      </div>
    </tr>
    <tr>
      <div class="field">
        <td>
          <%= f.label 'パスワード' %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
        </td>
        <td></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        <td></td>
        <td></td>
      </div>
    </tr>
    <tr>
      <div class="field">
        <td><%= f.label 'パスワード(確認用)' %></td>
        <td></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        <td></td>
        <td></td>
      </div>
    </tr>
    <tr>
      <div class="actions">
        <td></td>
        <td></td>
        <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
        <td></td>
        <td></td>
      </div>
    </tr>
  </table>
<% end %>

<h4><strong>既に登録済みの方</strong></h4>
<div>
  <%= render "user/shared/links" %> からログインしてください。
</div>
