<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'user/users/info', user: @idea.user %>
      <h2 class="mt-3">New idea</h2>
      <%= render 'form', idea: @idea_new %>
      <!--レンダー階層が同じならファイル名のみで記入-->
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>💜アイデア💜</h2>
  		<table class='table'>
  		 <tbody>
  		  <tr>
          <td>
            <%= link_to user_path(@idea.user) do %>
            <%= image_tag @idea.user.get_profile_image, size:"50x50" %><br>
            <%= @idea.user.name %>
            <% end %>
          </td>

          <td><%= link_to @idea.title, @idea %></td>
          <td><%= @idea.body %></td>
          <td id = "favorite_<%= @idea.id %>">
             <%= render partial: "user/favorites/favorite", locals: { idea: @idea } %>
          </td>
            <%if @idea.user == current_user %>
              <td><%= link_to 'Edit', edit_idea_path(@idea), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to 'Destroy', @idea, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            <% end %>
        </tr>
        <tr id="comments_area">
                <%= render 'user/idea_comments/index', comments: @comments %>
        </tr>
       </tbody>
      </table>
        <div id="comments_area">
         <% if user_signed_in? %>
          <%= render 'user/idea_comments/form', idea: @idea, comment: @comment %>
         <% end %>
        <!--</div>-->
        </div>
    </div>
  </div>
</div>