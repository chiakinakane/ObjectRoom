<%= flash[:notice] %>
 <div class='container mt-5 h-75'>
  <div class='row h-100'>
    <div class='col-md-2'>
      <%= render 'genre_search', genres: @genres %>
    </div>

    <div  class='col-md-10'>
      <div>
        <div class = "new-arrival">
          <div style="display:flex; flex-wrap:wrap;">
            <h3><strong><%= @genre.name %>一覧</strong></h3>
            <div class="mt-2"><strong>（全<%= @genre_ideas.count%>件）</strong></div>
          </div>
          <div class = "new-arrival-contents" style="display:flex; flex-wrap:wrap;">
            <% @genre_ideas.each do |idea| %>
              <%= link_to idea_path(idea), class:"text-dark"  do %>
              <div class="mr-3">
                  <%= image_tag idea.get_idea_image, size:"200x150" %>
                  <p class="mt-3 mb-1"><strong><%= idea.name %></strong></p>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div style="margin:0 auto;">
      <%= paginate @genre_ideas%>
    </div>
  </div>
</div>
