<div class='container px-5 px-sm-0'>
  <%#= link_to '新規投稿', new_idea_path, class: "btn btn-info" %>
  <%#= render 'layouts/errors', obj: @idea %>
  <div class='row'>
    <div class='col-md-2'>
      <h3><strong>User info</strong></h3>
      <%= render 'user/users/info', user: current_user %>
      <h3 class="mt-2"><strong>ジャンル</strong></h3>
      <%= render 'genre_search', genres: @genres %>
    </div>
    <div  class='col-md-2'>
      <div>
        <div class = "new-arrival">
          <div style="display:flex; flex-wrap:wrap;">
            <h3><strong><%= @genre.name %>一覧</strong></h3>
            <div class="mt-2"><strong>（全<%= @genre_ideas.count%>件）</strong></div>
          </div>
          <div class="row">
            <% @genre_ideas.each do |idea| %>
            <div class="col-md-3">
              <div class="card shadow">
                <%= link_to idea_path(idea) do %>
                <%= image_tag idea.get_image, class: 'w-100 favorite-card-img' %>
                <% end %>
                <div class="card-body">
                  <%= idea.title %>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div style="margin:0 auto;">
      <%= paginate @genre_ideas%>
    </div>
  </div>
</div>
