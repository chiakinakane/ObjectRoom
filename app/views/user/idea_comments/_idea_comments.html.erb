<!--/ ----- 'comments/_index'で使用中 ------->
<div class='container'>
  <!--/ ユーザー詳細の表示-->
  <div class='row.d-flex.align-items-center.pb-3'>
    <div class='col'>
      <% if comment.user.profile_image %>
        <%= link_to image_tag(comment.user.get_profile_image), url: user_path(comment.user.id) %>
      <% else %>
        <%= link_to image_tag('no_profile_img.png'), user_path(comment.user.id) %>
        <%= link_to "#{comment.user.name}さん", user_path(comment.user.id), class: 'link pl-1' %>
      <% end %>
    </div>
    <div class= 'col.d-flex.justify-content-end'>
      <%= comment.created_at.strftime('%Y/%m/%d') %>
    </div>
    <!--/ コメントの表示-->
    <div class='card-body.border.rounded.mb-3'>
      <%= comment.comment %>
    </div>
  hr.d-none
  </div>
    <% if comment.user == current_user %>
      <%= link_to idea_idea_comment_path(comment.idea_id, comment.id), method: :delete, remote: true do %>
  <div class= 'text-right'>
    <div class= 'button.btn.btn-outline-secondary'>
      | 削除する
    </div>
  </div>
   <% end %>
   <% end %>
</div>
